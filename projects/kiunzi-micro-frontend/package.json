{
    "name": "kiunzi-micro-frontend",
    "version": "0.0.1",
    "description": "Kiunzi framework Micro-frontend scaffolding",
    "homepage": "https://github.com/jamarsto/kiunzi-micro-frontend",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jamarsto/kiunzi-micro-frotnend.git"
    },
    "keywords": [
        "angular",
        "webpack",
        "micro-frontend",
        "custom-elements",
        "microservices"
    ],
    "author": "Jason Marston <jason@jasonmarston.co.uk>",
    "license": "MIT",
    "scripts": {
        "build": "tsc -p tsconfig.schematics.json",
        "postbuild": "copyfiles schematics/*/schema.json schematics/*/files/** schematics/collection.json ../../dist/kiunzi-micro-frontend/"
    },
    "schematics": "./schematics/collection.json",
    "ng-add": {
        "save": "devDependencies"
    },
    "devDependencies": {
        "copyfiles": "file:../../node_modules/copyfiles",
        "typescript": "file:../../node_modules/typescript"
    },
    "peerDependencies": {
        "@angular/common": "^13.3.0",
        "@angular/core": "^13.3.0"
    },
    "dependencies": {
        "tslib": "^2.3.0"
    }
}